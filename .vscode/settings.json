{
    "[solidity]": {
        "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    "npm.exclude": "**/lib/**",
    "solidity.formatter": "forge",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.cache": true,
        "**/.vs/": true,
        "**/*.cs": true,
        "**/*.orig": true,
        "**/bin/": true,
        "**/build/": true,
        "**/build/**/*": true,
        "**/debug/": true,
        "**/dist/": true,
        "**/node_modules/": true,
        "**/obj": true,
        "node_modules": true,
        "node_modules/*/**": true,
        "**/node_modules": true,
        "yarn-error.log": true,
        "**/yarn-error.log": true,
        "packages\\eth-hooks/lib": true,
        "**/.yalc": true
    },
    "search.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.cache": true,
        "**/.vs/": true,
        "**/*.cs": true,
        "**/*.orig": true,
        "**/bin/": true,
        "**/build/": true,
        "**/build/**/*": true,
        "**/debug/": true,
        "**/dist/": true,
        "**/node_modules/": true,
        "**/obj": true,
        "node_modules": true,
        "node_modules/*/**": true,
        "**/node_modules": true,
        "yarn-error.log": true,
        "**/yarn-error.log": true,
        "**/.yalc": true
    }
}
